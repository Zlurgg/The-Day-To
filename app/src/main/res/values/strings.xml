    <!-- Welcome Dialog -->
    <string name="welcome_dialog_title">Welcome to The Day To</string>
    <string name="welcome_dialog_subtitle">Your personal mood journal for daily emotional wellbeing</string>
    <string name="welcome_dialog_features_title">Features</string>
    <string name="welcome_dialog_features_list">• Track your daily mood with colors\n• Add personal notes and reflections\n• Visualize your month with a color calendar\n• Create custom mood-color combinations\n• Private and secure - all data stored locally</string>
    <string name="welcome_dialog_privacy_title">Privacy</string>
    <string name="welcome_dialog_privacy_info">Your journal entries are stored locally on your device. We use Google Sign-In for authentication only - your journal data remains private and is never uploaded to external servers.</string>
