    <string name="tutorial_dialog_quick_start_title">Quick Start</string>
    <string name="tutorial_dialog_quick_start_content">• Tap the + button to create your first entry\n• Choose a mood color that reflects how you feel\n• Add optional notes about your day</string>
    <string name="tutorial_dialog_tips_title">Tips</string>
    <string name="tutorial_dialog_tips_content">• Enable notifications for daily reminders\n• Your calendar fills with colors over time\n• Access Help &amp; Tutorial anytime from the menu</string>

    <!-- Help Dialog (shown from settings menu) -->
    <string name="help_dialog_title">How to Use The Day To</string>
    <string name="help_dialog_button">Got It</string>
    <string name="help_dialog_creating_entries_title">Creating Entries</string>
    <string name="help_dialog_creating_entries_content">Tap the + button to log your daily mood. Select a mood color, add optional notes, and save.</string>
    <string name="help_dialog_mood_colors_title">Custom Mood Colors</string>
    <string name="help_dialog_mood_colors_content">Tap + when selecting a mood to create your own mood-color combinations.</string>
    <string name="help_dialog_calendar_title">Calendar View</string>
    <string name="help_dialog_calendar_content">Your month displays as a color calendar. Tap any date to view or edit that day\'s entry.</string>
    <string name="help_dialog_notifications_title">Notifications</string>
    <string name="help_dialog_notifications_content">Enable daily reminders in settings to get gentle nudges at your preferred time.</string>
    <string name="help_dialog_editing_title">Editing Entries</string>
    <string name="help_dialog_editing_content">Tap any colored date on the calendar to edit or view that entry\'s notes.</string>

    <!-- Legacy tutorial strings (kept for reference, not currently used) -->
    <string name="tutorial_getting_started_title">Getting Started</string>
    <string name="tutorial_getting_started_content">Welcome! Start by creating your first mood entry. Tap the floating + button on the calendar to begin.</string>
    <string name="tutorial_creating_entries_title">Creating Entries</string>
    <string name="tutorial_creating_entries_content">1. Select a mood from the dropdown\n2. Choose a date (defaults to today)\n3. Add optional notes about your day\n4. Tap the save button</string>
    <string name="tutorial_mood_colors_title">Custom Mood Colors</string>
    <string name="tutorial_mood_colors_content">Create your own mood-color combinations! When selecting a mood, tap \"Add custom mood color\" to choose a mood name and color that reflects your feelings.</string>
    <string name="tutorial_calendar_title">Viewing Your Calendar</string>
    <string name="tutorial_calendar_content">Your month is displayed as a color calendar. Each day shows the color of your mood. Tap any date to view or edit that day\'s entry.</string>
    <string name="help_and_tutorial">Help &amp; Tutorial</string>

    <!-- Editor Tutorial Dialog -->
    <string name="editor_tutorial_dialog_title">Creating Your First Entry</string>
    <string name="editor_tutorial_dialog_button">Got It</string>
    <string name="editor_tutorial_mood_colors_title">Mood Colors</string>
    <string name="editor_tutorial_mood_colors_content">Mood colors help you visually track your emotions. Tap a color to select it for today, or create custom colors with the + button to match your unique feelings.</string>
    <string name="editor_tutorial_notes_title">Adding Notes</string>
    <string name="editor_tutorial_notes_content">Notes are optional but provide context for your mood. Use them to reflect on your day, what happened, or how you\'re feeling. They appear in your calendar timeline.</string>
    <string name="editor_tutorial_saving_title">Saving Your Entry</string>
    <string name="editor_tutorial_saving_content">Tap \"Save\" to log your entry. You can create one entry per day, but you can always edit it later by tapping the day on your calendar.</string>

